---
import { getLangFromUrl } from '../../i18n/utils'

const { isMain } = Astro.props
import { cn } from 'utils/twMerge'
import Navigation from '../molecules/Navigation.tsx'
import Envelope from '../atoms/Envelope'

const lang = getLangFromUrl(Astro.url)
const currentPath = Astro.url.pathname
---

<footer
	class={cn(
		isMain ? 'bg-linear-65 from-custom-green to-custom-blue' : 'bg-custom-blue',
		'flex items-center relative bottom-0 left-0 w-full px-10 h-12'
	)}
>
	<Navigation
		client:load
		currentPath={currentPath}
		isMain={isMain}
		lang={lang}
	/>
	<Envelope client:load />
</footer>
